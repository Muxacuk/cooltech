footer.footer
	.footer__top
		.container
			.footer__top__left
				a(href="#").logo.logo__footer
					img(src="img/white-logo.png", alt="COOLTECH logo").logo__img
			.footer__top__right
				.socials.footer__socials
					- var items = ['vk','fb','tw']
					ul.socials__list
						each item in items
							li(class="socials__item socials__item__#{item}")
								a(href="#" target="_blank").social__link=item
				nav.nav.footer__nav
					.container
						- var items = ['Плашнеты','Мобильние телефоны','Mp3 плееры','Персональние компьютеры','Ноутбуки','Аксессуары','Бытовая техника']
						ul.nav__list
							- each item, index in items
								li(class= (index == 1)? "active" : " ").nav__item 
									a(href="#").nav__link #{item}
	.footer__bottom
		.container
